{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true
    }]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(chalk)/)"
  ],
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.ts",
    "**/tests/**/*.spec.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ]
}
