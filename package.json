{
  "name": "@risadams/bramble",
  "version": "1.2.0",
  "type": "module",
  "description": "A terminal-based tool for advanced git branch analysis and visualization",
  "main": "dist/index.js",
  "bin": {
    "bramble": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "git",
    "branch",
    "analysis",
    "terminal",
    "cli",
    "visualization"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "risadams",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/risadams/bramble.git"
  },
  "homepage": "https://github.com/risadams/bramble#readme",
  "bugs": {
    "url": "https://github.com/risadams/bramble/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.14.0",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.8.0",
    "@types/pdfkit": "^0.12.12",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.2.0"
  }
}
